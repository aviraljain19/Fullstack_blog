<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <script
      src="https://kit.fontawesome.com/42a182743f.js"
      crossorigin="anonymous"
    ></script>
    <!-- CSS -->
    <link rel="stylesheet" href="/css/form.css" />
    <title>Add Post</title>
  </head>
  <body>
    <%-include('../partials/navbar.ejs')%>
    <div class="form-container">
      <!-- icon -->
      <h1>
        Add Post

        <!-- add icon -->
        <i class="fas fa-plus"></i>
      </h1>
      <%if(error){%>
      <small class="error">
        <i class="fas fa-exclamation-circle"></i>
        <%=error%>
      </small>
      <%}%>
      <form action="/api/v1/posts" method="POST" enctype="multipart/form-data">
        <!-- Post Title -->
        <div class="input-wrapper">
          <label for="name">Post Title</label>
          <input type="text" name="title" id="name" />
          <!-- err -->
        </div>

        <!-- Category -->
        <div class="input-wrapper">
          <label for="category">Category</label>
          <select name="category" id="category">
            <option value="Education">Education</option>
            <option value="Events">Event</option>
            <option value="Fashion">Fashion</option>
            <option value="Business">Business</option>
            <option value="Food">Food</option>
            <option value="Lifestyle">Lifestyle</option>
            <option value="Travel">Travel</option>
            <option value="Finance">Finance</option>
            <option value="Personal">Personal</option>
            <option value="Affiliate">Affiliate</option>
            <option value="Movie">Movie</option>
            <option value="Music">Music</option>
            <option value="Crafts">Crafts</option>
            <option value="Fitness">Fitness</option>
            <option value="Marketing">Marketing</option>
            <option value="News">News</option>
            <option value="Parenting">Parenting</option>
            <option value="Gaming">Gaming</option>
            <option value="Political">Political</option>
            <option value="Others">Others</option>
          </select>
          <!-- err -->
        </div>
        <div class="input-wrapper">
          <!-- Post Body -->
          <label for="body">Post Body</label>
          <textarea name="description" id="body" cols="30" rows="10"></textarea>
          <!-- err -->
        </div>
        <!-- Post Image -->
        <div class="input-wrapper">
          <label for="image">Post Image</label>
          <input type="file" name="postImg" id="image" />
          <!-- err -->
        </div>

        <button type="submit">Create</button>
      </form>
    </div>
    <%-include('../partials/footer.ejs')%>
  </body>
</html>
