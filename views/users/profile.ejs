<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->

    <!-- CSS -->
    <link rel="stylesheet" href="/css/profile.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Profile</title>
  </head>
  <body>
    <%-include('../partials/navbar.ejs')%>
    <div class="profile-container">
      <header>
        <div
          class="backgroundImg"
          style="background-image: url(<%=user?.coverImage%>)"
        ></div>
        <div class="icons-container">
          <p>
            <a href="/api/v1/users/upload-cover-photo-form">
              <i class="fas fa-camera upload-btn"></i
            ></a>
          </p>

          <p>
            <a href="/api/v1/users/<%=user?._id%>">
              <i class="fas fa-edit"></i>
            </a>
          </p>

          <p>
            <a href="/api/v1/users/update-Password">
              <i class="fas fa-key fas"></i>
            </a>
          </p>
        </div>
        <!-- upload cover image icon -->
      </header>

      <!-- profile image -->
      <div class="profile-img">
        <img src="<%=user?.profileImage%>" alt="profile image" />
        <!-- upload profile image icon -->
        <a href="/api/v1/users/upload-profile-photo-form"
          ><i class="fas fa-camera upload-btn"></i
        ></a>
      </div>
      <!-- personal details -->
      <div class="personal-container">
        <div class="details-wrapper">
          <div class="details">
            <i class="fas fa-user"></i>
            <p>Name: <%=user?.fullname%></p>
          </div>
          <div class="details">
            <i class="fas fa-envelope"></i>
            <p>Email: <%=user?.email%></p>
          </div>
          <!-- date joined -->
          <div class="details">
            <i class="fas fa-calendar"></i>
            <p>Date Joined: <%=user?.createdAt.toLocaleDateString()%></p>
          </div>
        </div>
      </div>
    </div>
    <div class="posts-title">
      <!-- Icon -->

      <h1>Posts (<%=user?.posts.length%>)</h1>
    </div>

    <!-- content -->

    <section class="posts">
      <%if(user?.posts?.length<=0){%>
      <h2 style="color: gray">No post found</h2>
      <%}else{ user?.posts?.forEach((post)=>{%>
      <a href="/api/v1/posts/<%=post?._id%>" class="post-read-more"
        ><article class="postContainer">
          <img src="<%=post?.image%>" alt="" class="post-image" />
          <p class="post-info">
            <span class="post-author">
              <i class="fas fa-user"></i>
              <a href="#"><%=user?.fullname%></a>
            </span>
            <span class="post-date">
              <i class="far fa-calendar-alt"></i>
              <time datetime="2020-01-01"
                ><%=post?.createdAt.toLocaleDateString()%></time
              >
            </span>
          </p>
          <h1 class="post-title"><%=post?.title%></h1>
          <p class="post-body"><%=truncate(post?.description)%></p>
          <!-- category -->
          <div class="category">
            <span>Category: <%=post?.category%></span>
          </div>
          <!-- <a href="/api/v1/posts/<%=post?._id%>" class="post-read-more"
            >Continue Reading...</a
          > -->
        </article></a
      >
      <%})%> <%}%>
    </section>
    <!-- footer -->
    <%-include('../partials/footer.ejs')%>
  </body>
</html>

